<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.jhotel_android_derni.MenuActivity">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/roomButton"
            android:layout_width="71dp"
            android:layout_height="101dp"

            android:layout_above="@+id/textView3"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/facebookButton"
            android:background="@drawable/bed" />

        <ImageButton
            android:id="@+id/attractionsButton"
            android:layout_width="71dp"
            android:layout_height="101dp"
            android:layout_alignTop="@+id/roomButton"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/facebookButton"
            android:background="@drawable/beach" />

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/facebook" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/roomButton"
            android:layout_alignParentTop="true"
            android:layout_marginTop="190dp"
            android:fontFamily="sans-serif"
            android:text="Book a Room" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/facebookButton"
            android:text="Nearby Attractions" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
